@model IEnumerable<TaskItem>

@{
    ViewData["Title"] = "Tasks";
    var isAdmin = ViewBag.IsAdmin ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>üìã Tasks</h2>
        <p class="text-muted">@(isAdmin ? "Manage all tasks" : "My assigned tasks")</p>
    </div>
    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-primary">
            ‚ûï Create New Task
        </a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center py-5">
        <h4>No tasks found</h4>
        <p class="mb-0">@(isAdmin ? "Create a new task to get started." : "You don't have any assigned tasks yet.")</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Assigned To</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Due Date</th>
                    <th>Progress</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.IsOverdue ? "table-danger" : "")">
                        <td>
                            <strong>@item.Title</strong>
                            @if (item.IsOverdue)
                            {
                                <span class="badge bg-danger ms-1">Overdue</span>
                            }
                        </td>
                        <td>@item.AssignedTo?.FullName</td>
                        <td>
                            @{
                                var statusClass = item.Status switch
                                {
                                    TaskItemStatus.NotStarted => "status-notstarted",
                                    TaskItemStatus.InProgress => "status-inprogress",
                                    TaskItemStatus.UnderReview => "status-underreview",
                                    TaskItemStatus.Completed => "status-completed",
                                    _ => "status-notstarted"
                                };
                            }
                            <span class="status-badge @statusClass">@item.Status.ToString().Replace("NotStarted", "Not Started").Replace("InProgress", "In Progress").Replace("UnderReview", "Under Review")</span>
                        </td>
                        <td>
                            @{
                                var priorityClass = item.Priority switch
                                {
                                    TaskPriority.Low => "priority-low",
                                    TaskPriority.Medium => "priority-medium",
                                    TaskPriority.High => "priority-high",
                                    TaskPriority.Critical => "priority-critical",
                                    _ => "priority-medium"
                                };
                            }
                            <span class="priority-badge @priorityClass">@item.Priority</span>
                        </td>
                        <td>
                            @item.DueDate.ToString("MMM dd, yyyy")
                            @if (item.IsOverdue)
                            {
                                <br><small class="text-danger">(Overdue)</small>
                            }
                        </td>
                        <td>
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar @(item.ProgressPercentage == 100 ? "bg-success" : "bg-info")" role="progressbar" 
                                     style="width: @item.ProgressPercentage%" 
                                     aria-valuenow="@item.ProgressPercentage" aria-valuemin="0" aria-valuemax="100">
                                    @item.ProgressPercentage%
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">üìÑ</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">‚úèÔ∏è</a>
                                @if (isAdmin)
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">üóëÔ∏è</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Legend:</h6>
                    <div class="d-flex flex-wrap gap-3">
                        <div><span class="status-badge status-notstarted">Not Started</span> Task hasn't been started</div>
                        <div><span class="status-badge status-inprogress">In Progress</span> Task is being worked on</div>
                        <div><span class="status-badge status-underreview">Under Review</span> Task is awaiting review</div>
                        <div><span class="status-badge status-completed">Completed</span> Task is finished</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
