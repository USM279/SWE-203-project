@model Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0">ðŸ‘¤ Employee Profile</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Full Name:</dt>
                    <dd class="col-sm-9"><strong>@Model.FullName</strong></dd>
                    
                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>
                    
                    <dt class="col-sm-3">Position:</dt>
                    <dd class="col-sm-9">@Model.Position</dd>
                    
                    <dt class="col-sm-3">Phone Number:</dt>
                    <dd class="col-sm-9">@Model.PhoneNumber</dd>
                    
                    <dt class="col-sm-3">Role:</dt>
                    <dd class="col-sm-9">
                        @if (Model.Role == "Admin")
                        {
                            <span class="badge bg-danger">@Model.Role</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">@Model.Role</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">Hire Date:</dt>
                    <dd class="col-sm-9">@Model.HireDate.ToString("MMMM dd, yyyy")</dd>
                    
                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">Assigned Tasks:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">@Model.AssignedTasks.Count</span> total tasks
                    </dd>
                </dl>
                
                @if (Model.AssignedTasks.Any())
                {
                    <hr>
                    <h5 class="mb-3">ðŸ“‹ Assigned Tasks:</h5>
                    <div class="list-group">
                        @foreach (var task in Model.AssignedTasks)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@task.Title</h6>
                                        <small class="text-muted">Due: @task.DueDate.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <div>
                                        @{
                                            var statusClass = task.Status switch
                                            {
                                                TaskItemStatus.NotStarted => "status-notstarted",
                                                TaskItemStatus.InProgress => "status-inprogress",
                                                TaskItemStatus.UnderReview => "status-underreview",
                                                TaskItemStatus.Completed => "status-completed",
                                                _ => "status-notstarted"
                                            };
                                        }
                                        <span class="status-badge @statusClass">@task.Status</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                
                <hr>
                
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
