@model Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0">üóëÔ∏è Delete Employee</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5>‚ö†Ô∏è Are you sure you want to delete this employee?</h5>
                    <p class="mb-0">This action cannot be undone.</p>
                </div>
                
                @if (Model.AssignedTasks.Any())
                {
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> This employee has @Model.AssignedTasks.Count assigned task(s). Please reassign or complete their tasks before deleting.
                    </div>
                }
                
                <dl class="row">
                    <dt class="col-sm-3">Full Name:</dt>
                    <dd class="col-sm-9">@Model.FullName</dd>
                    
                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>
                    
                    <dt class="col-sm-3">Position:</dt>
                    <dd class="col-sm-9">@Model.Position</dd>
                    
                    <dt class="col-sm-3">Role:</dt>
                    <dd class="col-sm-9">@Model.Role</dd>
                    
                    <dt class="col-sm-3">Assigned Tasks:</dt>
                    <dd class="col-sm-9">@Model.AssignedTasks.Count</dd>
                </dl>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger" @(Model.AssignedTasks.Any() ? "disabled" : "")>Delete Employee</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
